<section class="content" >
<div class="row">
  <div class="small-6 large-centered columns" id="order_sum">
    <div class="row">
      <div class="small-12 medium-6 columns">
        <h3>Revenue</h3>

        <p>Paid Order Revenue: </p>
        <p>Completed Order Revenue: </p>

        <p>Total Revenue*: </p>
      </div>
      <div class="small-12 medium-6 columns">
        <h3>Orders</h3>
        <p>
          Paid Orders:
          <% if @orders_paid.empty? %>
            N/A
          <% else %>
            <%= @orders_paid.each do |order| %>
              ID: <%= order.id %>, CREATED <%= order.created_at.strftime("%Y-%m-%d") %>
            <% end %>
          <% end %>
        </p>
        <p>
          Completed Orders:
          <% if @orders_complete.empty? %>
            N/A
          <% else %>
            <%= @orders_complete.each do |order| %>
              ID: <%= order.id %>, CREATED <%= order.created_at.strftime("%Y-%m-%d") %>
            <% end %>
          <% end %>
        </p>
        <p>
          Cancelled Orders:
          <% if @orders_cancelled.empty? %>
            N/A
          <% else %>
            <%= @orders_cancelled.each do |order| %>
              ID: <%= order.id %>, CREATED <%= order.created_at.strftime("%Y-%m-%d") %>
            <% end %>
          <% end %>
        </p>
        <p>
          Total Orders:
          <% if @orders.empty? %>
            This merchant had no orders on record.
          <% else %>
            <%= @orders.each do |order| %>
              ID: <%= link_to order.id, order_path(id: order.id) %>, CREATED <%= order.created_at.strftime("%m-%d-%Y") %>,
            <% end %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>
<p class="center">*Total Revenue calculated based on all successfully shipped items.</p>
  
  <h1 class="catalog__header">Order detail page</h1>
  <hr>
  <% @orders.each do |order| %>
    <div class="card rounded-0 cart__text" style="width: 18rem;">
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Name: <%= order.credit_name %></li>
        <li class="list-group-item">Shipping Address: <%= order.address %></li>
        <li class="list-group-item">Zip Code: <%= order.zip %></li>
        <li class="list-group-item">Email: <%= order.email %></li>
        <li class="list-group-item">Order Number: <%= order.id %></li>
        <li class="list-group-item">Purchased On: <%= order.created_at.to_date %></li>
        <li class="list-group-item">Order Status: <%= order.status %></li>
      </ul>
  <%end %>
  </div>
</section>