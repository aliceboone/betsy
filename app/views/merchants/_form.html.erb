  <% if @merchant.errors.any? %>
      <ul class="errors">
        <% @merchant.errors.each do |column, message| %>
          <li>
            <strong><%= column.capitalize %></strong> <%= message %>
          </li>
      </ul>
    <% end %>
    <% end %>

    <section>
      <%= form_with model: @merchant do |f|  %>

        <div class="form-group">
          <%= f.label :photo %>
          <%= f.text_field :photo, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :store_name %>
          <%= f.text_field :mailing_address, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :store_location %>
          <%= f.text_field :store_location, class: 'form-control' %>
        </div>


        <div class="form-group">
          <%= f.submit action_name, class: " btn btn-primary" %>
          <%= link_to 'Cancel', merchants_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </section>
