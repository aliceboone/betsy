  <% if @merchant.errors.any? %>
      <ul class="errors">
        <% @merchant.errors.each do |column, message| %>
          <li>
            <strong><%= column.capitalize %></strong> <%= message %>
          </li>
      </ul>
    <% end %>
    <% end %>

    <section>
      <%= form_with model: @merchant do |f|  %>

        <div class="form-group">
          <%= f.label :username %>
          <%= f.text_field :username, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :email%>
          <%= f.text_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit action_name, class: " btn btn-primary" %>
          <%= link_to 'Cancel', profile_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </section>
