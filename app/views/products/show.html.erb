<main>
  <section>
    <h2>Name: <%= @product.name %> </h2>
    <p>Description: <%= @product.description %></p>
    <p>Price:<%= @product.price %> </p>
    <p>Inventory:<%= @product.inventory%></p>
    <p>Category:<%= @product.category%></p>
    <section>

      <%= link_to "Add to Cart", product_order_items_path(@product.id), method: :post %>
      <%= link_to "Back to categories", root_path, class: "button" %>
      <%= link_to "Edit", edit_product_path(@product.id), class: "button"%>
      <%= link_to "Delete", product_path(@product.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger"%>
    </section>
  </section>
</main>