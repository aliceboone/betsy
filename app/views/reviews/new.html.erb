<section class="content">
  <h1 class = "catalog__header">Add a new review</h1>
  <hr>
  <% if @review.errors.any? %>
    <ul class="errors alert alert-danger" role="alert">
      <% @review.errors.each do |column, message| %>
        <li>
          <strong><%= column.capitalize %></strong> <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @review, class: 'create-category' do |f| %>
    <%= f.hidden_field :product_id %>

    <div class = "form-group">
      <%= f.label :rating %>
      <%= f.select :rating, [1, 2, 3, 4, 5], class: "form-control"%>
    </div>

    <div class = "form-group">
      <%= f.label :content %>
      <%= f.text_area :content, placeholder: "E.g. Add you review here", class: 'form-control', required: true%>
    </div>

    <%= f.submit "Add review", class: 'product__new-button'%>
  <% end %>
</section>