<% if @category.errors.any? %>
  <ul class="errors">
    <% @category.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<section >
  <%= form_with model: @category do |f|  %>
    <div class = "form-group">
      <%= f.label :category_name %>
      <%= f.text_field :category_name, class: 'form-control'%>
    </div>
    <%= f.submit action_name, class: 'btn btn-primary'%>
    <%= link_to "Cancel", products_path, class: 'btn btn-secondary'%>
  <% end %>
</section>