<section class="content">
  <div class="col-md-4 order-md-2 mb-4">
    <h4 class="d-flex justify-content-between align-items-center mb-3">
      <span class="text-muted">Your cart</span>
    </h4>
    <ul class="list-group mb-3">
      <% if @order_items.empty? %>
        Cart is Empty
      <% else %>
        <% @order_items.each do |order_item| %>
      <li class="list-group-item d-flex justify-content-between lh-condensed">
        <div>
            <h6><%= order_item.product.name %></h6>
            <small class="text-muted"><%= order_item.product.description %></small>
        </div>
            <span class="text-muted"><%=order_item.product.price %></span>

<!--            <strong>Total cost: <%#= $<%='%.2f' % order_item.total_orders%></strong>-->
        <% end %>
      </li>
      <% end %>
    </ul>

    <%= link_to 'Checkout', edit_order_path(@cart), class: "btn btn-primary"%>
    <%= link_to 'Back to products', products_path, class: "btn btn-secondary" %>
  </div>
</section>