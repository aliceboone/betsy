<h2>Your Cart</h2>

<% if @order_items.empty? %>
  Cart is Empty
  <% else %>
  <ul>
  <% @order_items.each do |order_item| %>
    <li><%= order_item.product.name %> with a quantity of <%= order_item.quantity %></li>
  <% end %>
  </ul>
<% end %>

<%= link_to 'Checkout', edit_order_path(@cart), class: "btn btn-primary"%>